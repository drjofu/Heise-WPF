<Window x:Class="WpfBasics.DockPanelBeispiel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBasics"
        mc:Ignorable="d"
        Title="DockPanelBeispiel" Height="300" Width="300">
  <DockPanel LastChildFill="True">
    <Button Content="Aber..." DockPanel.Dock="Top"/>
    <Button Content="B" DockPanel.Dock="Bottom"/>
    <Button Content="C" DockPanel.Dock="Left"/>
    <Button Content="D" DockPanel.Dock="Right"/>
    <Button Content="E" DockPanel.Dock="Top"/>
    <Button Content="F"/>
    <Button Content="G"/>
  </DockPanel>
</Window>
